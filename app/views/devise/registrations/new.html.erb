<style>.page-content { width: 100%; background: url('http://res.cloudinary.com/unique/image/upload/c_scale,q_67,w_1924/v1480002699/photo-1424460421773-58b49adfc68a_wbdi8r.jpg')}</style>
  <div class="flexbox guest-container">
    <div class="guestintro">
    <h1>eVaporMail</h1>
    
    <p>Already have an account?</p>
    <%= link_to new_session_path(resource_name) do %>
      <div class="btn-signup">Log in</div>
    <% end %>

    </div>
  <div class="guestmodal">
      <h2>Sign up</h2>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <div class="popup">
        <% if  resource.errors.any? %>
          <div class="alert "><%= resource.errors.full_messages.first %></div>
      <% end %>
      </div>

        <div class="field">
          <%= f.email_field :email, autofocus: true, placeholder: "Email" %>
        </div>

        <div class="field">
          <%= f.text_field :first_name, autofocus: true, placeholder: "Firstname" %>
        </div>

        <div class="field">
          <%= f.text_field :last_name, autofocus: true, placeholder: "Lastname" %>
        </div>

        <div class="field">
          <%= f.text_field :user_name, autofocus: true, placeholder: "User name" %>
        </div>

        <div class="field">
          <% if @minimum_password_length %>
          <em>(Choose a password: <%= @minimum_password_length %> characters minimum)</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "off", placeholder: "Password" %>
        </div>

        <div class="field">
          <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "Password (confirmation)" %>
        </div>

        <div class="actions">
          <%= f.submit "Sign up", class: "guest-submit" %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
